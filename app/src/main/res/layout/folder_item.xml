<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/txt_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img"
        android:layout_alignLeft="@+id/item_img"
        android:layout_alignStart="@+id/item_img"
        android:layout_marginBottom="10dp"
        android:text="Image Path"
        android:textColor="@android:color/white"
        android:background="@color/transparet_gray"
        android:padding="15dp"/>
</RelativeLayout>

